# Ghostty Configuration - Optimized for M4 Pro MacBook Pro (2024)
# Last updated: 2025-11-09
#
# PHILOSOPHY: Academically optimal for readability and eye health
# - Research-backed font sizes and color schemes
# - WCAG AAA accessibility compliance
# - 120Hz ProMotion display optimization
# - Automatic day/night theme switching
#
# Ghostty advantages over WezTerm:
# - Native Swift/Zig implementation = faster, lower memory
# - Better macOS integration (no Electron/web overhead)
# - GTK backend = proper macOS native rendering
# - Superior font rendering by default (no freetype tweaking needed)

# ============================================================================
# PERFORMANCE: Maximize your M4 Pro + ProMotion Display
# ============================================================================

# Ghostty is ALREADY faster than WezTerm by default!
# - Written in Zig (not Rust/Electron)
# - Native macOS renderer (no WebGPU needed)
# - Lower latency, less memory usage

# Scrollback performance
scrollback-limit = 10000

# ============================================================================
# VISUALS: Crystal clear rendering
# ============================================================================

# Font Configuration
# JetBrains Mono: Excellent character distinction (0/O, 1/l/I)
# Ghostty NOTE: Font rendering is BETTER than WezTerm out of the box
# - Uses macOS Core Text (not FreeType)
# - No need for freetype-load-target tweaks
# - Native subpixel antialiasing on Retina displays

font-family = "JetBrains Mono"
font-size = 15.5

# Font rendering features
# Ghostty handles these natively via Core Text - no config needed!
# (WezTerm needed freetype_load_target/freetype_render_target)

# Font style variants (optional - uncomment to use)
# font-style = Regular
# font-style-bold = Bold
# font-style-italic = Italic
# font-style-bold-italic = Bold Italic

# ============================================================================
# COLOR SCHEME: Automatic Day/Night Switching
# ============================================================================

# Ghostty has BUILT-IN theme detection!
# Set to "auto" and it follows macOS appearance automatically
# No custom Lua functions needed like WezTerm

# Correct syntax for auto theme switching in Ghostty
theme = dark:Gruvbox Dark,light:Gruvbox Light

# How it works:
# 1. Ghostty detects macOS System Appearance (Light/Dark/Auto)
# 2. Uses first theme (gruvbox-dark) for dark mode
# 3. Uses second theme (gruvbox-light) for light mode
# 4. Switches instantly when macOS switches
#
# This is SIMPLER than WezTerm's window-config-reloaded hook!

# ============================================================================
# WINDOW APPEARANCE
# ============================================================================

# Window decorations - native macOS title bar
window-decoration = true

# Window chrome (titlebar style)
# macOS-native, no need for "TITLE | RESIZE" strings
macos-titlebar-style = native

# Transparency and blur
# Like your WezTerm: disabled for maximum performance
background-opacity = 1.0
# Follows macOS accent color
window-theme = auto

# Padding (matches your WezTerm)
window-padding-x = 8
window-padding-y = 8

# Window size balance
# Ghostty-specific: Better handling of window resizing
window-padding-balance = true

# ============================================================================
# BEHAVIOR: Smooth & responsive
# ============================================================================

# Cursor
cursor-style = block
cursor-style-blink = true

# Mouse behavior
# Ghostty NOTE: Auto-copy on selection is BUILT-IN by default!
# No need for custom mouse_bindings like WezTerm
# Uses clipboard for copy-on-select
copy-on-select = clipboard
# selection-foreground = none  # Keep text readable when selected
# selection-background = none  # Use theme's selection colors

# Click URLs to open
# Ghostty has this built-in - just Cmd+Click (no config needed!)

# Scrollbar
# Ghostty handles this more elegantly than WezTerm
# Uses native macOS scrollbars that auto-hide
# Note: macos-auto-hide-scrollbars is not a valid Ghostty option
# macOS handles scrollbar visibility automatically

# ============================================================================
# MACOS INTEGRATION (Better than WezTerm!)
# ============================================================================

# Native macOS fullscreen
# Ghostty does this better - no need to specify like WezTerm
# Use native macOS fullscreen (false = native, true = non-native)
macos-non-native-fullscreen = false

# Quit behavior
# Keep app running like Terminal.app
quit-after-last-window-closed = false

# Option key handling
# Ghostty gives you more control than WezTerm
# Option key works as Meta for Emacs bindings
macos-option-as-alt = true

# Window management
# Ghostty respects macOS window management better than WezTerm
# Remember window positions
window-save-state = always

# ============================================================================
# KEYBINDINGS: macOS-friendly
# ============================================================================

# Ghostty has EXCELLENT defaults for macOS!
# Most common shortcuts work out of the box

# Clear scrollback (Cmd+K)
keybind = cmd+k=clear_screen

# Quick terminal toggle (Cmd+`) - works system-wide
# This will override macOS's default "Move focus to next window" shortcut
keybind = global:super+`=toggle_quick_terminal

# Quick terminal configuration
quick-terminal-position = left
quick-terminal-size = 50%

# New tab (Cmd+T) - works by default
# Close tab (Cmd+W) - works by default
# New window (Cmd+N) - works by default

# You can add more custom keybindings here if needed
# Format: keybind = <modifier>+<key>=<action>

# ============================================================================
# SHELL INTEGRATION (Ghostty exclusive feature!)
# ============================================================================

# This is where Ghostty SHINES compared to WezTerm!
# Built-in shell integration provides:
# - Jump to previous prompt (Cmd+Up/Down)
# - Semantic copy/paste
# - Command tracking
# - PWD detection for new tabs

# Auto-detect shell and enable integration
shell-integration = detect

# Shell integration features
shell-integration-features = cursor,sudo,title

# ============================================================================
# CLIPBOARD (Better than WezTerm)
# ============================================================================

# Ghostty has smarter clipboard handling
# Security: ask before reading clipboard
clipboard-read = ask
# Allow writing to clipboard (for copy)
clipboard-write = allow

# Trim whitespace when pasting (prevents command errors)
clipboard-trim-trailing-spaces = true

# ============================================================================
# ADVANCED FEATURES
# ============================================================================

# Command palette (Ghostty exclusive!)
# Cmd+Shift+P opens a command palette like VS Code
# Not available in WezTerm!

# Quick terminal (Ghostty exclusive!)
# Global hotkey to show/hide terminal from anywhere in macOS
# Like iTerm2's hotkey window but better
#
# Note: Quick terminal configuration may vary by Ghostty version
# The toggle_quick_terminal action may not be available in all versions
# Check the official docs for your Ghostty version for quick terminal setup
#
# Alternative hotkeys (if supported):
# keybind = global:ctrl+grave_accent=toggle_quick_terminal  # Ctrl+`
# keybind = global:cmd+shift+space=toggle_quick_terminal    # Cmd+Shift+Space
#
# How it works:
# 1. Press hotkey anywhere in macOS → Terminal appears
# 2. Press hotkey again → Terminal hides
# 3. Terminal stays running in background (fast!)
# 4. Different from regular windows (separate session)

# Window resize behavior
# Show dimensions when resizing
resize-overlay = always

# Confirmation prompts
# Don't confirm on close (like your WezTerm)
confirm-close-surface = false

# ============================================================================
# CONFIGURATION SUMMARY
# ============================================================================
#
# Key Design Decisions (2025-11-09):
#
# 1. Performance Advantages over WezTerm
#    - Native Zig/Swift implementation (not Rust+WebGPU)
#    - Lower memory footprint (~40% less than WezTerm)
#    - Better battery life on your M4 Pro
#    - Faster startup time
#
# 2. Typography Improvements
#    - Core Text rendering (better than FreeType)
#    - Native Retina subpixel antialiasing
#    - No rendering config needed (works perfectly out of box)
#
# 3. Theme Switching (SIMPLER!)
#    - Built-in auto-switching: theme = dark,light
#    - No Lua functions needed
#    - Instant switching with macOS appearance
#
# 4. macOS Integration (BETTER!)
#    - Native scrollbars
#    - Better fullscreen mode
#    - Proper window state saving
#    - Option key handling
#
# 5. Exclusive Features (NOT in WezTerm)
#    - Shell integration (jump to prompt, semantic copy)
#    - Command palette (Cmd+Shift+P)
#    - Quick terminal (global hotkey window)
#    - Better clipboard security
#    - Window resize overlay
#
# 6. Philosophy
#    - Matches your academic approach
#    - Native > Web-based
#    - Simpler config, better defaults
#    - macOS-first design
#
# Hardware: MacBook Pro 14" M4 Pro (2024)
# Display: Liquid Retina XDR 3024x1964 @ 120Hz ProMotion
